
FROM node:20-alpine

WORKDIR /app

# Install sqlite3 dependencies
RUN apk add --no-cache sqlite sqlite-dev python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install express better-sqlite3

# Copy server files
COPY server.js ./

# Create data directory for SQLite
RUN mkdir -p /app/data

# Expose port
EXPOSE 3000

CMD ["node", "server.js"]

